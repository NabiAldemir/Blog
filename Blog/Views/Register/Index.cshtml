@model BlogWebSite.Models.UserSignUpViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form method="post" asp-action="Index">
					<div class="form-group">
						<span asp-validation-for="@Model.nameSurname" class="text-danger mb-2"></span>
						<input type="text" class="form-control" placeholder="Adınız & Soyadınız" asp-for="@Model.nameSurname">
					</div>
					<div class="form-group">
						<span asp-validation-for="@Model.Mail" class="text-danger"></span>
						<input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
					</div>
					<div class="form-group">
						<span asp-validation-for="@Model.UserName" class="text-danger"></span>
						<input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="@Model.UserName">
					</div>
					<div class="form-group">
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
						<input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password">
					</div>
					<div class="form-group">
						<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
						<input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="@Model.ConfirmPassword">
					</div>

					<div class="form-group">
						<div class="checkbox i-checks"><label> <input type="checkbox" required><i></i>Şartları Okudum ve Kabul Ediyorum</label></div>
					</div>
					<button type="submit" class="btn btn-primary block full-width m-b">Kayıt OL</button>

					<p class="text-muted text-center"><small>Bir Hesabınız Var Mı?</small></p>
					<a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>
				</form>

			</div>
		</div>
	</div>
	<br />
	<script>
		$('#btn1').click(function(){
			Swal.fire("Site Kabul Şartları","Sitenizde verdiğim mail adresine elektronik ileti mesajı gönderilmesine izin veriyorum");
		});
	</script>
</section>
