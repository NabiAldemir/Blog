<div class="tech-btm">
    <h4>Mail Bülteni'ne Abone Olun!</h4>
    <form id="subscribeForm">
        <input type="email" placeholder="E-mail" name="Mail" id="emailInput" required="">
        <input type="submit" value="Abone Ol!">
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function () {
		 $("#subscribeForm").submit(function (e) {
			 e.preventDefault(); // Sayfanın yenilenmesini engeller

			 var formData = $(this).serialize(); //form verilerini al

			 $.ajax({
				 type: "POST",
				 url: "/NewsLetter/SubscribeMail",
				 data: formData,
				 success: function (response) {
					 if(response.success)
					 {
					 toastr.success("Başarıyla Abone Olundu!");
					 $("#subscribeForm")[0].reset(); // Formu temizle
					 }
					 else{
						 toastr.error("Bir Hata Oluştu!");
					 }
				 },
				 error:function(){
					 toastr.error("İşlem Başarısız!")
				 }
			 });
		 });
	 });
</script>
